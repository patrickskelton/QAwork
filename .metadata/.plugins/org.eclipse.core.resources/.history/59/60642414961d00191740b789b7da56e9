
public class exersice {
	
	public static int blackjack(int firstNumber, int secondNumber) {
		if (firstNumber>21 && secondNumber>21) {
			return 0;
		}
		else if (firstNumber>21 || secondNumber>21) {
			if(firstNumber>21) {
				return secondNumber;
			}
			else {
				return firstNumber;
			}
		}
		else {
			if(firstNumber > secondNumber) {
				return firstNumber;
			}
			else {
				return secondNumber;
			}
		}
		
	}

}
